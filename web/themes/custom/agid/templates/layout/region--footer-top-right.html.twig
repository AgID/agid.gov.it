{#
/**
* @file
* Theme override to display footer_top region.
*
* Available variables:
* - content: The content for this region, typically blocks.
* - attributes: HTML attributes for the region div.
* - region: The name of the region variable as defined in the theme's
*   .info.yml file.
*
* @see template_preprocess_region()
*/
#}

{% set classes = [
'Grid-cell',
'u-hidden',
'u-sm-hidden',
'u-md-block',
'u-lg-block',
'u-size1of4',
'u-md-size2of4',
'u-lg-size2of4'
] %}

{% if content %}
  <div{{ attributes.addClass(classes) }}>
    {{ content }}
    {{ social_locations.footer_top_right }}
  </div>
{% endif %}
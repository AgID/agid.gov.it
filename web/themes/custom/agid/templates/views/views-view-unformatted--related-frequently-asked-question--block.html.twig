{#
/**
 * @file
 * Theme override to display a view of unformatted rows.
 *
 * Available variables:
 * - title: The title of this group of rows. May be empty.
 * - rows: A list of the view's row items.
 *   - attributes: The row's HTML attributes.
 *   - content: The row's content.
 * - view: The view object.
 * - default_row_class: A flag indicating whether default classes should be
 *   used on rows.
 *
 * @see template_preprocess_views_view_unformatted()
 */
#}
{% set accordion_classes = [
    'Accordion',
    'Accordion--default',
    'fr-accordion',
    'js-fr-accordion',
] %}
<div class="u-layout-centerContent u-padding-r-bottom">
    <section class="u-layout-wide">

        <div class="related-content related-faq">

            {# Accordion #}
            <div{{ attributes
                .addClass(accordion_classes)
            .setAttribute('id', 'accordion-1') }}>

                {% for row in rows %}
                    {# Accordion item #}
                    <h2 class="Accordion-header js-fr-accordion__header fr-accordion__header"
                        id="{{ 'accordion-header-' ~ loop.index0 }}">
                        <span class="Accordion-link">{{ row.content['#node'].title.value }}</span>
                    </h2>
                    {# Accordion panel #}
                    <div id="{{ 'accordion-panel-' ~ loop.index0 }}"
                         class="Accordion-panel fr-accordion__panel js-fr-accordion__panel">
                        {{ row.content }}
                    </div>
                {% endfor %}

            </div>
{#
        {% for row in rows %}
          {%
            set row_classes = [
              default_row_class ? 'views-row',
              'Grid-cell'
            ]
          %}
            {% if loop.index0 == 0 %}
                {% set row_classes = row_classes|merge(['u-nbfc', 'u-size1of1', 'u-md-size1of2', 'u-lg-size1of2', 'u-padding-right-s']) %}
            {% elseif loop.index0 == 1 %}
                {% set row_classes = row_classes|merge(['u-size1of1', 'u-md-size1of2', 'u-lg-size1of2', 'u-padding-r-left']) %}
            {% endif %}
          <div{{ row.attributes.addClass(row_classes) }}>
            {{ row.content }}
          </div>
        {% endfor %}
#}
        </div>
    </section>
</div>
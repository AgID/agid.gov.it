{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
{%
  set classes = [
    'Form',
    'Form--search-site',
    'u-text-r-xs',
  ]
%}
{% set classesToRemove = [ 'views-exposed-form' ] %}
<form{{ attributes.addClass(classes).removeClass(classesToRemove) }}>
  {{ children }}
</form>
